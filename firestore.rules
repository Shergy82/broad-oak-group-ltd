
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check user role from the 'users' collection
    function getUserRole(uid) {
      return get(/databases/$(database)/documents/users/$(uid)).data.role;
    }
    
    function isPrivileged(uid) {
        return getUserRole(uid) in ['admin', 'owner'];
    }

    // --- User Profiles ---
    match /users/{userId} {
      // A user can create their own profile document
      allow create: if request.auth.uid == userId;
      // A user can read or update their own profile. Privileged users can read any profile.
      allow read, update: if request.auth.uid == userId || isPrivileged(request.auth.uid);
    }
    
    match /users/{userId}/pushSubscriptions/{subId} {
        // Users can only manage their own push subscriptions
        allow read, write: if request.auth.uid == userId;
    }

    // --- Announcements ---
    match /announcements/{announcementId} {
      // Any authenticated user can read announcements
      allow read: if request.auth != null;
      // Only privileged users can write/delete announcements
      allow write, delete: if isPrivileged(request.auth.uid);
    }
    
    // --- Shifts ---
    match /shifts/{shiftId} {
      // Any authenticated user can read shifts (app filters them by user)
      allow read: if request.auth != null;
      
      // ONLY the owner can create/delete shifts in-app
      allow create, delete: if getUserRole(request.auth.uid) == 'owner';
      
      // An owner can update any field. A user can only update status/notes on their own shift.
      allow update: if getUserRole(request.auth.uid) == 'owner' || 
                     (request.auth.uid == resource.data.userId && request.resource.data.keys().hasOnly(['status', 'notes']));
    }

    // --- Projects & Files ---
    match /projects/{projectId} {
      // Any authenticated user can read project details
      allow read: if request.auth != null;
      // Only privileged users can create/update the main project document
      allow write: if isPrivileged(request.auth.uid);

      // --- Project Files Subcollection ---
      match /files/{fileId} {
        // Any authenticated user can read file metadata and create new file documents.
        allow read, create: if request.auth != null;
        
        // A user can delete a file document if they uploaded it OR if they are privileged.
        allow delete: if request.auth.uid == resource.data.uploaderId || isPrivileged(request.auth.uid);
      }
    }
  }
}

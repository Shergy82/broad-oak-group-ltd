rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user has a specific role.
    function isRole(uid, role) {
      return get(/databases/$(database)/documents/users/$(uid)).data.role == role;
    }
    
    // Helper function to check if a user is an admin or owner.
    function isPrivilegedUser(uid) {
      let userRole = get(/databases/$(database)/documents/users/$(uid)).data.role;
      return userRole == 'admin' || userRole == 'owner';
    }

    // Users Collection
    match /users/{userId} {
      // Allow user creation (signup) for anyone.
      allow create: if request.auth.uid == userId;
      
      // Allow users to read their own profile. Admins/owners can read anyone's.
      allow read: if request.auth.uid == userId || isPrivilegedUser(request.auth.uid);
      
      // Allow users to update their own profile. Admins/owners can update anyone's.
      allow update: if request.auth.uid == userId || isPrivilegedUser(request.auth.uid);
      
      // Only the owner can delete a user record.
      allow delete: if isRole(request.auth.uid, 'owner');
    }
    
    match /users/{userId}/pushSubscriptions/{subscriptionId} {
        // Allow users to manage their own push notification subscriptions.
        allow read, write, delete: if request.auth.uid == userId;
    }

    // Shifts Collection
    match /shifts/{shiftId} {
      // Any logged-in user can read all shifts.
      allow read: if request.auth != null;
      
      // Only privileged users (admins/owners) can create shifts.
      allow create: if isPrivilegedUser(request.auth.uid);

      // Users can update their own shifts (e.g., change status), and admins/owners can update any.
      allow update: if resource.data.userId == request.auth.uid || isPrivilegedUser(request.auth.uid);
      
      // Only privileged users can delete shifts.
      allow delete: if isPrivilegedUser(request.auth.uid);
    }

    // Projects Collection and Files Subcollection
    match /projects/{projectId} {
      // Any logged-in user can read project details.
      allow read: if request.auth != null;
      
      // Only privileged users can create, update, or delete projects.
      allow create, update, delete: if isPrivilegedUser(request.auth.uid);

      match /files/{fileId} {
        // Any logged-in user can read file details.
        allow read: if request.auth != null;
        
        // Any logged-in user can create (upload) files.
        allow create: if request.auth != null;
        
        // Only privileged users or the original uploader can delete a file.
        allow delete: if isPrivilegedUser(request.auth.uid) || resource.data.uploaderId == request.auth.uid;
      }
    }
    
    // Announcements Collection
    match /announcements/{announcementId} {
      // Any logged-in user can read announcements.
      allow read: if request.auth != null;
      
      // Only privileged users can create, update, or delete announcements.
      allow create, update, delete: if isPrivilegedUser(request.auth.uid);
    }
    
    // Settings Collection (for notification toggle)
    match /settings/notifications {
        // Only the owner can read or write to the global notification setting.
        allow read, write: if isRole(request.auth.uid, 'owner');
    }
  }
}

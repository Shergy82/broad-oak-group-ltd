
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  
    function isPrivileged(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role in ['admin', 'owner'];
    }

    match /users/{userId} {
      allow read: if request.auth.uid == userId || isPrivileged(request.auth.uid);
      allow update: if request.auth.uid == userId 
                    || (
                      isPrivileged(request.auth.uid) &&
                      'role' in request.resource.data &&
                      resource.data.role != 'owner' &&
                      !(get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' && resource.data.role == 'admin')
                    );
      allow create: if request.auth != null;
      
      match /pushSubscriptions/{subscriptionId} {
        allow read, write, delete: if request.auth.uid == userId;
      }
    }
    
    match /shifts/{shiftId} {
      allow read: if request.auth.uid == resource.data.userId || isPrivileged(request.auth.uid);
      allow create, delete: if isPrivileged(request.auth.uid);
      allow update: if (request.auth.uid == resource.data.userId && request.resource.data.keys().hasOnly(['status']))
                     || isPrivileged(request.auth.uid);
    }

    match /projects/{projectId} {
      allow read: if request.auth != null;
      allow write, delete: if isPrivileged(request.auth.uid);

      match /files/{fileId} {
        allow read: if request.auth != null;
        allow write, delete: if isPrivileged(request.auth.uid);
      }
    }
  }
}

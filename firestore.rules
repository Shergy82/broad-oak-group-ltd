rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is an admin or owner
    function isPrivileged(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role in ['admin', 'owner'];
    }

    // Users can only read/write their own profile, but admins/owners can read anyone's profile.
    match /users/{userId} {
      allow read: if request.auth.uid == userId || isPrivileged(request.auth.uid);
      allow write: if request.auth.uid == userId;
      
      // Users can only manage their own push subscriptions
      match /pushSubscriptions/{subscriptionId} {
        allow read, write: if request.auth.uid == userId;
      }
    }
    
    // Only the owner can manage global settings
    match /settings/{docId} {
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'owner';
    }

    // Shifts can be read by their assigned user or any admin/owner.
    // Shifts can only be created/updated/deleted by admins/owners.
    match /shifts/{shiftId} {
      allow read: if resource.data.userId == request.auth.uid || isPrivileged(request.auth.uid);
      allow create, update, delete: if isPrivileged(request.auth.uid);
    }
    
    // All authenticated users can read project and file data.
    match /projects/{projectId} {
      allow read: if request.auth != null;
      // Writing (create/update/delete) is handled by Cloud Functions with their own permission checks.
      allow write: if isPrivileged(request.auth.uid);
      
      match /files/{fileId} {
        allow read: if request.auth != null;
        allow write: if isPrivileged(request.auth.uid);
      }
    }

    // Announcements can be read by any authenticated user.
    // They can be created by privileged users.
    // They can be updated by any user ONLY to add their own UID to the viewedBy map.
    match /announcements/{announcementId} {
      allow read: if request.auth != null;
      allow create, delete: if isPrivileged(request.auth.uid);
      
      // This rule allows a user to "acknowledge" an announcement.
      // It ensures that the only change being made is adding the current user's UID to the 'viewedBy' map.
      // No other fields (title, content, etc.) can be modified in this update operation.
      allow update: if request.auth != null
                    && request.resource.data.diff(resource.data).affectedKeys()
                       .hasOnly(['viewedBy'])
                    && request.resource.data.viewedBy.diff(resource.data.viewedBy).affectedKeys()
                       .hasOnly([request.auth.uid]);
    }
    
    match /health_and_safety_files/{fileId} {
      allow read: if request.auth != null;
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'owner';
    }
  }
}

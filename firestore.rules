rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'owner';
    }

    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isPrivilegedUser() {
      return isAdmin() || isOwner();
    }
    
    // Allow new users to create their own user document.
    match /users/{userId} {
      allow create: if request.auth.uid == userId;
      allow read: if request.auth.uid == userId || isPrivilegedUser();
      allow update, delete: if isPrivilegedUser();
    }

    match /shifts/{shiftId} {
      allow read, write: if isPrivilegedUser();
      allow read, update: if request.auth.uid == resource.data.userId;
    }

    match /projects/{projectId} {
      allow read: if request.auth != null;
      allow create, update, delete: if isPrivilegedUser();
      
      match /files/{fileId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null;
        allow delete: if isPrivilegedUser() || request.auth.uid == resource.data.uploaderId;
      }
    }
    
    match /announcements/{announcementId} {
        allow read: if request.auth != null;
        allow create, update, delete: if isPrivilegedUser();
    }
    
    match /settings/{docId} {
        allow read, write: if isOwner();
    }
  }
}
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // USER PROFILES
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == userId;
      // Allow user to update their own profile, or an owner to update any profile.
      allow update: if request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'owner';
      
      // Push Subscriptions can only be managed by the user they belong to.
      match /pushSubscriptions/{subscriptionId} {
        allow read, write: if request.auth.uid == userId;
      }
    }

    // SHIFTS
    match /shifts/{shiftId} {
        allow read: if request.auth != null;
        // Only admins or owners can create, update, or delete shifts.
        // A user can update their own shift (e.g., to change its status).
        allow create, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
        allow update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'] || request.auth.uid == resource.data.userId;
    }
    
    // PROJECTS
    match /projects/{projectId} {
        allow read: if request.auth != null;
        allow create, update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
        
        // Project Files
        match /files/{fileId} {
            allow read: if request.auth != null;
            allow create: if request.auth != null;
            // Allow deletion by the uploader or an admin/owner.
            allow delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'] || request.auth.uid == resource.data.uploaderId;
        }
    }

    // ANNOUNCEMENTS
    match /announcements/{announcementId} {
        allow read: if request.auth != null;
        allow create, update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
    }
    
    // HEALTH & SAFETY
    match /health_and_safety_files/{fileId} {
      // Any authenticated user can read (get, list) H&S files.
      allow read: if request.auth != null;
      // Only admins or owners can upload or delete H&S files.
      allow create, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
    }
  }
}

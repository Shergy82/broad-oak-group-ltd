
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users:
    // - Authenticated users can read their own profile.
    // - Users can create their own profile upon signup.
    // - Owners can read all user profiles (for user management).
    // - Owners can update user roles.
    match /users/{userId} {
      allow read: if request.auth.uid == userId
                  || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'owner';
      allow create: if request.auth.uid == userId;
      allow update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'owner';
      
      // Push Subscriptions:
      // - Users can manage their own push subscriptions.
      match /pushSubscriptions/{subscriptionId} {
        allow read, write, delete: if request.auth.uid == userId;
      }
    }

    // Shifts:
    // - Any authenticated user can read shifts.
    // - Admins/owners can create/update/delete shifts.
    // - Users can update the status of their own shifts.
    match /shifts/{shiftId} {
      allow read: if request.auth != null;
      allow create, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
      allow update: if request.auth.uid == resource.data.userId
                   || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
    }

    // Announcements:
    // - Any authenticated user can read announcements.
    // - Admins/owners can create/update/delete announcements.
    match /announcements/{announcementId} {
      allow read: if request.auth != null;
      allow write, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
    }

    // Projects:
    // - Any authenticated user can read project details.
    // - Admins/owners can create projects.
    match /projects/{projectId} {
      allow read: if request.auth != null;
      allow create: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
      
      // Project Files:
      // - Any authenticated user can read file lists.
      // - Any authenticated user can CREATE (upload) files.
      // - Users can delete their OWN files. Admins/owners can delete ANY file.
      match /files/{fileId} {
        allow read, create: if request.auth != null;
        allow delete: if request.auth.uid == resource.data.uploaderId 
                      || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
      }
    }
  }
}

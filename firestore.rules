rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users:
    // - Authenticated users can read their own profile.
    // - Authenticated users can create/update their own push subscription documents.
    // - Authenticated users can create acknowledgement receipts for announcements.
    // - Admins/Owners can read all user profiles.
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner']);
      allow write: if request.auth != null && request.auth.uid == userId;

      match /pushSubscriptions/{subscriptionId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // THIS IS THE CRITICAL FIX: Allow a user to write a document to their own subcollection.
      match /acknowledgedAnnouncements/{announcementId} {
        allow create: if request.auth != null && request.auth.uid == userId;
        allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Announcements:
    // - Any authenticated user can read announcements.
    // - Only admins/owners can create, update, or delete them.
    match /announcements/{announcementId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
    }

    // Settings:
    // - Only the owner can read or write notification settings.
    match /settings/notifications {
        allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'owner';
    }

    // Shifts:
    // - Any authenticated user can read/write to their own shifts.
    // - Admins/Owners can read all shifts.
    // - Admins/Owners can create/update/delete any shift.
    match /shifts/{shiftId} {
      allow read: if request.auth != null && (request.auth.uid == resource.data.userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner']);
      allow create: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
      allow update, delete: if request.auth != null && (request.auth.uid == resource.data.userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner']);
    }

    // Projects & Files:
    // - Any authenticated user can read all projects and their files.
    // - Admins/Owners can create, update, and delete projects and files.
    match /projects/{projectId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];

      match /files/{fileId} {
        allow read: if request.auth != null;
        allow create, update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
      }
    }
  }
}

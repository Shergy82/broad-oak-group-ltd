rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check for admin/owner roles from the users collection
    function isPrivileged(uid) {
      return get(/databases/$(database)/documents/users/$(uid)).data.role in ['admin', 'owner'];
    }

    // USERS
    match /users/{userId} {
      // Allow user creation on signup
      allow create: if request.auth.uid == userId;

      // Allow users to read their own data, and privileged users to read any user's data
      allow get: if request.auth.uid == userId || isPrivileged(request.auth.uid);
      
      // Allow privileged users to list all users
      allow list: if isPrivileged(request.auth.uid);

      // Allow users to update their own profile (but not their role).
      // Allow privileged users to update any profile (including role).
      allow update: if (request.auth.uid == userId && !('role' in request.resource.data)) || isPrivileged(request.auth.uid);
    }
    
    // SHIFTS
    match /shifts/{shiftId} {
      // Privileged users can create/delete any shift.
      allow create, delete: if isPrivileged(request.auth.uid);

      // Any authenticated user can read any shift. The UI filters what they see.
      allow get, list: if request.auth.uid != null;

      // Privileged users can update any field.
      // Regular users can ONLY update the 'status' of their own shift.
      allow update: if isPrivileged(request.auth.uid) || 
        (request.auth.uid == resource.data.userId && request.resource.data.keys().hasOnly(['status']));
    }
    
    // PROJECTS
    match /projects/{projectId} {
        // Any authenticated user can read project data.
        allow get, list: if request.auth.uid != null;
        
        // Only privileged users can create, update, or delete projects.
        allow write: if isPrivileged(request.auth.uid);
    }
  }
}

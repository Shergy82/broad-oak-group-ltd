rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read/write their own user document
    match /users/{userId} {
      allow read, update, delete: if request.auth.uid == userId;
      allow create: if request.auth.uid != null;
    }

    // Allow admins/owners to read the full user list
    match /users/{userId} {
      allow list: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
    }

    // Shifts can only be read by the assigned user or an admin/owner
    // Shifts can only be created by an admin/owner
    // Shifts can only be updated by the assigned user or an admin/owner
    match /shifts/{shiftId} {
      allow read: if request.auth.uid == resource.data.userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
      allow create: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
      allow update: if request.auth.uid == resource.data.userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
      allow delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
    }

    // Allow admins/owners to list all shifts
    match /shifts/{shiftId} {
        allow list: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
    }

    // Projects can be read by any authenticated user
    // Projects can only be created/updated/deleted by an admin/owner
    match /projects/{projectId} {
      allow read: if request.auth.uid != null;
      allow create, update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
    }

    // Attached files can be read, written, and deleted by any authenticated user
    match /projects/{projectId}/files/{fileId} {
        allow read, write, delete: if request.auth.uid != null;
    }
  }
}

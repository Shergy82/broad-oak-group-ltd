rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to get user profile data
    function getUserProfile(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }
    
    // Helper function to check if the user has an admin or owner role
    function isPrivileged(userId) {
      let userProfile = getUserProfile(userId);
      return userProfile.role in ['admin', 'owner'];
    }

    // Helper function to check if the user is the owner
    function isOwner(userId) {
      let userProfile = getUserProfile(userId);
      return userProfile.role == 'owner';
    }

    // Users can read/write their own data. Owners can read all user data.
    match /users/{userId} {
      allow read: if request.auth.uid != null && (request.auth.uid == userId || isOwner(request.auth.uid));
      allow write: if request.auth.uid != null && request.auth.uid == userId;
      
      // Push subscriptions can be created/deleted by the user themselves
      match /pushSubscriptions/{subscriptionId} {
        allow read, write, delete: if request.auth.uid != null && request.auth.uid == userId;
      }
    }
    
    // Shifts can be read by their assigned user or any privileged user.
    // Shifts can only be created/updated/deleted by a privileged user (via the Admin Panel/File Uploader).
    match /shifts/{shiftId} {
      allow read: if request.auth.uid != null && (request.auth.uid == resource.data.userId || isPrivileged(request.auth.uid));
      allow create: if request.auth.uid != null && isPrivileged(request.auth.uid);
      allow update, delete: if request.auth.uid != null && isPrivileged(request.auth.uid);
    }
    
    // Projects and their files can be read by anyone logged in.
    // They can only be created/updated/deleted by privileged users.
    match /projects/{projectId} {
      allow read: if request.auth.uid != null;
      allow create, update, delete: if request.auth.uid != null && isPrivileged(request.auth.uid);
      
      match /files/{fileId} {
        allow read: if request.auth.uid != null;
        allow create: if request.auth.uid != null; // Allow any authenticated user to upload
        allow delete: if request.auth.uid != null && (isPrivileged(request.auth.uid) || request.auth.uid == resource.data.uploaderId);
      }
    }
    
    // Announcements can be read by anyone logged in.
    // They can only be created/updated/deleted by privileged users.
    match /announcements/{announcementId} {
        allow read: if request.auth.uid != null;
        allow create, update, delete: if request.auth.uid != null && isPrivileged(request.auth.uid);
    }

    // Settings can be read by any authenticated user, but only written by the owner.
    match /settings/{docId} {
      allow read: if request.auth.uid != null;
      allow write: if request.auth.uid != null && isOwner(request.auth.uid);
    }

  }
}
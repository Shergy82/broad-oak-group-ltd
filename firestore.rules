
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is an admin or owner
    function isPrivileged(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role in ['admin', 'owner'];
    }

    // Users can read/write their own profile, but only create if it doesn't exist.
    // Admins can read/update any user profile.
    match /users/{userId} {
      allow read: if request.auth.uid == userId || isPrivileged(request.auth.uid);
      allow create: if request.auth.uid == userId;
      allow update: if isPrivileged(request.auth.uid);
      // No one can delete user profiles through the client SDK.
      allow delete: if false;

      // Users can only manage their own push subscriptions.
      match /pushSubscriptions/{subId} {
        allow read, write, delete: if request.auth.uid == userId;
      }
    }

    // Shifts can be read by the assigned user or any privileged user.
    // Shifts can only be created by privileged users (from the admin panel).
    // Shifts can be updated by the assigned user (to change status).
    // Privileged users can delete shifts (e.g., for cleanup).
    match /shifts/{shiftId} {
      allow read: if request.auth.uid == resource.data.userId || isPrivileged(request.auth.uid);
      allow create: if isPrivileged(request.auth.uid);
      allow update: if request.auth.uid == resource.data.userId || isPrivileged(request.auth.uid);
      allow delete: if isPrivileged(request.auth.uid);
    }
    
    // All authenticated users can view project information and files.
    // Only privileged users can create or delete projects and files.
    match /projects/{projectId} {
      allow read: if request.auth != null;
      allow write: if isPrivileged(request.auth.uid);
      
      match /files/{fileId} {
        allow read: if request.auth != null;
        allow write: if isPrivileged(request.auth.uid);
      }
    }
  }
}


rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin/owner roles
    function isPrivileged(userId) {
      // Check if the user document exists and has a role field before accessing it.
      return exists(/databases/$(database)/documents/users/$(userId)) &&
             get(/databases/$(database)/documents/users/$(userId)).data.role in ['admin', 'owner'];
    }
    
    // Users can only read/update their own profile or be managed by privileged users.
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId || isPrivileged(request.auth.uid);
      // Anyone can create their own user document upon sign-up.
      allow create: if request.auth.uid == userId;
      
      // Users can manage their own push subscriptions
      match /pushSubscriptions/{subscriptionId} {
        allow read, write: if request.auth.uid == userId;
      }
    }

    // Shifts can be read/updated by the assigned user or privileged users.
    // Any authenticated user can create shifts (for admin import and testing).
    // Only privileged users can delete shifts.
    match /shifts/{shiftId} {
        allow read, update: if request.auth.uid == resource.data.userId || isPrivileged(request.auth.uid);
        allow create: if request.auth.uid != null;
        allow delete: if isPrivileged(request.auth.uid);
    }
    
    // Announcements can be read by any authenticated user.
    // Only privileged users can create, update, or delete them.
    match /announcements/{announcementId} {
      allow read: if request.auth.uid != null;
      allow write: if isPrivileged(request.auth.uid);
    }
    
    // Health & Safety files can be read by any authenticated user.
    // Only privileged users can write (create, update, delete).
    match /health_and_safety_files/{fileId} {
      allow read: if request.auth.uid != null;
      allow write: if isPrivileged(request.auth.uid);
    }

    // Projects can be read by any authenticated user.
    // Privileged users can create/write. All users can upload files to a project.
    match /projects/{projectId} {
      allow read: if request.auth.uid != null;
      allow write: if isPrivileged(request.auth.uid);

      // Rules for project-specific files
      match /files/{fileId} {
        // Any authenticated user can read files
        allow read: if request.auth.uid != null;
        // Anyone can create (upload) a file
        allow create: if request.auth.uid != null;
        // Only the uploader or a privileged user can delete a file
        allow delete: if request.auth.uid == resource.data.uploaderId || isPrivileged(request.auth.uid);
      }
    }
  }
}

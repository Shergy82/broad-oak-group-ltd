rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    function getUserRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }

    function isPrivilegedUser(userId) {
      let role = getUserRole(userId);
      return role == 'admin' || role == 'owner';
    }

    match /project_files/{projectId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    match /health_and_safety_files/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && isPrivilegedUser(request.auth.uid);
    }
  }
}

rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check the role of the currently signed-in user.
    function isSignedInUserRole(role) {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }
    
    // Helper function to check if the signed-in user's role is one of the provided roles.
    function isSignedInUserInRoles(roles) {
      let userRole = get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
      return userRole in roles;
    }

    match /users/{userId} {
      // READ: Users can read their own profile. Admins/Owners can read any profile.
      allow read: if request.auth.uid == userId || isSignedInUserInRoles(['admin', 'owner']);
      
      // CREATE: A user can create their own user document upon signup.
      allow create: if request.auth.uid == userId;

      // UPDATE: Admins/Owners can update any user document. This is the key fix.
      allow update: if isSignedInUserInRoles(['admin', 'owner']);
      
      // DELETE: Only the owner can delete a user.
      allow delete: if isSignedInUserRole('owner');
      
      // LIST: Admins/Owners can list all users.
      allow list: if isSignedInUserInRoles(['admin', 'owner']);
    }

    // Push Subscriptions: Users can only manage their own subscriptions.
    match /users/{userId}/pushSubscriptions/{subscriptionId} {
      allow read, write, delete: if request.auth.uid == userId;
    }

    // Shifts:
    // Any authenticated user can read shifts (for admin views and personal dashboards).
    // Admins/Owners can create/update/delete any shift.
    // A regular user can only update their own shifts.
    match /shifts/{shiftId} {
      allow read: if request.auth.uid != null;
      allow create: if isSignedInUserInRoles(['admin', 'owner']);
      allow update: if isSignedInUserInRoles(['admin', 'owner']) || request.auth.uid == resource.data.userId;
      allow delete: if isSignedInUserInRoles(['admin', 'owner']);
    }
    
    // Projects & Files:
    // All authenticated users can read projects and their files.
    // Admins/Owners can create, update, and delete projects.
    // All authenticated users can create (upload) files.
    // Users can delete files they uploaded; Admins/Owners can delete any file.
    match /projects/{projectId} {
      allow read: if request.auth.uid != null;
      allow write: if isSignedInUserInRoles(['admin', 'owner']); // Covers create, update, delete
      
      match /files/{fileId} {
        allow read: if request.auth.uid != null;
        allow create: if request.auth.uid != null;
        allow delete: if request.auth.uid == resource.data.uploaderId || isSignedInUserInRoles(['admin', 'owner']);
      }
    }
    
    // Announcements & Acknowledgements:
    // All users can read announcements.
    // Admins/Owners can create/update/delete announcements.
    // Any user can create their own acknowledgement.
    match /announcements/{announcementId} {
      allow read: if request.auth.uid != null;
      allow write: if isSignedInUserInRoles(['admin', 'owner']);
      
      match /acknowledgedBy/{userId} {
      	allow read, write: if request.auth.uid == userId;
      }
    }

    // Settings (e.g., global notification toggle):
    // Only the owner can read or write to the settings collection.
    match /settings/{docId} {
      allow read, write: if isSignedInUserRole('owner');
    }
  }
}

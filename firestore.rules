rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin or owner roles.
    function isOwnerOrAdmin(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role in ['admin', 'owner'];
    }

    // Helper function to check if the user is the owner of the resource.
    function isOwner(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role == 'owner';
    }

    // USERS:
    // 1. Allow users to read their own profile.
    // 2. Allow admins/owners to read any user profile.
    // 3. Allow users to create their own profile upon signup.
    // 4. Allow users to update their own profile.
    // 5. Allow owners to update any user's profile (for role changes).
    match /users/{userId} {
      allow read: if request.auth.uid == userId || isOwnerOrAdmin(request.auth.uid);
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId || isOwner(request.auth.uid);
    }

    // PUSH SUBSCRIPTIONS (subcollection of users)
    // Users can only manage their own push notification subscriptions.
    match /users/{userId}/pushSubscriptions/{subscriptionId} {
        allow read, write, delete: if request.auth.uid == userId;
    }

    // SHIFTS:
    // 1. Allow any authenticated user to read all shifts (for dashboards).
    // 2. Allow admins/owners to create/update/delete any shift.
    // 3. Allow users to update the status of their own assigned shifts.
    match /shifts/{shiftId} {
      allow read: if request.auth.uid != null;
      allow create, delete: if isOwnerOrAdmin(request.auth.uid);
      allow update: if isOwnerOrAdmin(request.auth.uid) || (request.auth.uid == resource.data.userId && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'notes']));
    }

    // PROJECTS:
    // 1. Allow any authenticated user to read all projects and their files.
    // 2. Allow admins/owners to create/delete projects.
    // 3. Allow any authenticated user to upload files to a project.
    // 4. Allow the uploader or an admin/owner to delete a specific file.
    match /projects/{projectId} {
      allow read: if request.auth.uid != null;
      allow create, delete: if isOwnerOrAdmin(request.auth.uid);
      
      match /files/{fileId} {
        allow read: if request.auth.uid != null;
        allow create: if request.auth.uid != null;
        allow delete: if isOwnerOrAdmin(request.auth.uid) || request.auth.uid == resource.data.uploaderId;
      }
    }
    
    // ANNOUNCEMENTS:
    // 1. Any authenticated user can read announcements.
    // 2. Admins/owners can create and update them.
    // 3. Any authenticated user can update an announcement to mark it as viewed.
    //    This is secure because the client-side code only ever updates the `viewedBy` map.
    match /announcements/{announcementId} {
      allow read: if request.auth.uid != null;
      allow write: if request.auth.uid != null;
      allow delete: if isOwnerOrAdmin(request.auth.uid);
    }
    
    // SETTINGS:
    // Global app settings can only be read or modified by the owner.
    match /settings/{docId} {
      allow read, write: if isOwner(request.auth.uid);
    }
  }
}

rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // USERS
    match /users/{userId} {
      // ANY authenticated user can read ANY user's profile.
      // This is generally safe if profiles don't contain sensitive data.
      allow read: if request.auth != null;
      
      // A user can ONLY create THEIR OWN user document upon sign-up.
      allow create: if request.auth.uid == userId;

      // A user can update their own profile.
      // Additionally, a user with the role 'admin' or 'owner' can update ANY user's profile.
      allow update: if request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
      
      // Only the owner can delete a user document.
      allow delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'owner';

      // Allow reading and creating push subscriptions for the user who owns them.
      match /pushSubscriptions/{subscriptionId} {
        allow read, write, delete: if request.auth.uid == userId;
      }
    }

    // SHIFTS
    match /shifts/{shiftId} {
      // An authenticated user can read any shift.
      allow read: if request.auth != null;
      
      // An admin or owner can create, update, or delete any shift.
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];

      // A regular user can only update a shift if it is assigned to them.
      // They cannot create or delete shifts directly.
      allow update: if request.auth.uid == resource.data.userId;
    }

    // PROJECTS and their FILES subcollection
    match /projects/{projectId} {
      // Any authenticated user can read project details.
      allow read: if request.auth != null;

      // Only admins or the owner can create, update, or delete project documents.
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];

      match /files/{fileId} {
        // Any authenticated user can read file details.
        allow read: if request.auth != null;
        
        // Any authenticated user can create (upload) a file.
        allow create: if request.auth != null;

        // A user can delete a file if they uploaded it, OR if they are an admin/owner.
        allow delete: if request.auth.uid == resource.data.uploaderId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
      }
    }
    
    // ANNOUNCEMENTS
    match /announcements/{announcementId} {
        // Any authenticated user can read announcements.
        allow read: if request.auth != null;

        // Only admins or the owner can create, update, or delete announcements.
        allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
    }

    // SETTINGS
    match /settings/{settingId} {
      // Only the owner can read or write to the global settings document.
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'owner';
    }
  }
}

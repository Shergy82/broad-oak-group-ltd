rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // --- Users Collection ---
    // Logged-in users can read their own profile.
    // Users can be created by anyone (for signup).
    // Only the user themselves or an admin/owner can update their profile.
    // The designated owner role cannot be changed by anyone.
    match /users/{userId} {
      allow read: if request.auth.uid == userId;
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];

      // Rule to manage role changes specifically
      allow update: if request.auth.uid != null &&
                       get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'owner' &&
                       resource.data.role != 'owner' && // cannot create another owner
                       !(resource.data.uid == request.auth.uid) && // owner cannot change their own role
                       !get(/databases/$(database)/documents/users/$(userId)).data.role == 'owner'; // cannot change an existing owner's role
    }

    // --- Push Subscriptions Subcollection ---
    // Users can only manage their own push notification subscriptions.
    match /users/{userId}/pushSubscriptions/{subscriptionId} {
      allow read, write, delete: if request.auth.uid == userId;
    }
    
    // --- Settings Collection ---
    // Only the owner can read or write to the global settings.
    match /settings/{docId} {
      allow read, write: if request.auth.uid != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'owner';
    }

    // --- Shifts Collection ---
    // Any logged-in user can create a shift (for testing/manual entry).
    // Users can read/update/delete their OWN shifts.
    // Admins/Owners can read/update/delete ANY shift.
    match /shifts/{shiftId} {
      allow create: if request.auth.uid != null;
      allow read, update, delete: if request.auth.uid == resource.data.userId || 
                                     get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
    }

    // --- Projects Collection ---
    // Any authenticated user can view project details.
    // Only admins or owners can create, update, or delete projects.
    match /projects/{projectId} {
      allow read: if request.auth.uid != null;
      allow create, update, delete: if request.auth.uid != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
    }

    // --- Project Files Subcollection ---
    // Any authenticated user can view/read files.
    // Any authenticated user can create (upload) files.
    // Only the person who uploaded the file, an admin, or the owner can delete it.
    match /projects/{projectId}/files/{fileId} {
      allow read, create: if request.auth.uid != null;
      allow delete: if request.auth.uid == resource.data.uploaderId ||
                       get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
    }
    
    // --- Announcements Collection ---
    // Any authenticated user can read announcements.
    // Only admins/owners can create, update, or delete them.
    match /announcements/{announcementId} {
        allow read: if request.auth.uid != null;
        allow create, update, delete: if request.auth.uid != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
    }
  }
}

rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Check if a user has a specific role ('admin' or 'owner')
    function isRole(role) {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }
    
    function isOwner() {
      return isRole('owner');
    }
    
    function isAdmin() {
      return isRole('admin');
    }
    
    function isOwnerOrAdmin() {
      return isOwner() || isAdmin();
    }
    
    // USERS
    match /users/{userId} {
      // Any authenticated user can create their own user document upon signing up.
      allow create: if request.auth.uid == userId;

      // Users can only read their own data. Admins and owners can read any user's data.
      allow read: if request.auth.uid == userId || isOwnerOrAdmin();
      
      // Users can only update their own data. The owner can update any user's role.
      allow update: if (request.auth.uid == userId) || 
                       (isOwner() && 'role' in request.resource.data);

      // Only the owner can delete users (a feature not currently implemented, but good to have).
      allow delete: if isOwner();
      
      // Push notification subscriptions
      match /pushSubscriptions/{subscriptionId} {
        // Users can only manage their own subscriptions.
        allow read, write, delete: if request.auth.uid == userId;
      }
    }
    
    // SHIFTS
    match /shifts/{shiftId} {
        // Any authenticated user can read shifts assigned to them. Admins/owners can read all shifts.
        allow read: if request.auth.uid == resource.data.userId || isOwnerOrAdmin();

        // Users can update the status of their own shifts. Admins/owners can create, update, and delete any shift.
        allow write: if (request.auth.uid == resource.data.userId && 'status' in request.resource.data) || isOwnerOrAdmin();

        // Allow owners/admins to create shifts (e.g. via file upload or manual creation)
        allow create: if isOwnerOrAdmin();
        
        // Allow owners/admins to delete shifts
        allow delete: if isOwnerOrAdmin();
    }

    // PROJECTS
    match /projects/{projectId} {
        // Any authenticated user can view project details.
        allow read: if request.auth != null;
        
        // Only admins and owners can create, update, or delete projects.
        allow write: if isOwnerOrAdmin();

        // Files subcollection within a project
        match /files/{fileId} {
            // Any authenticated user can view files.
            allow read: if request.auth != null;

            // Any authenticated user can upload (create) a file record.
            allow create: if request.auth != null;

            // Only the person who uploaded the file, or an admin/owner, can delete it.
            allow delete: if request.auth.uid == resource.data.uploaderId || isOwnerOrAdmin();
        }
    }

    // ANNOUNCEMENTS
    match /announcements/{announcementId} {
        // Any authenticated user can read announcements.
        allow read: if request.auth != null;
        
        // Only admins and owners can create, update, or delete announcements.
        allow write: if isOwnerOrAdmin();
    }

    // GLOBAL SETTINGS (for notification toggle)
    match /settings/{settingId} {
        // Any authenticated user can READ the notification setting.
        allow read: if request.auth != null;

        // ONLY the 'owner' can WRITE to the notification setting.
        allow write: if isOwner();
    }
  }
}

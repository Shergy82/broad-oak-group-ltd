
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function signedIn() {
      return request.auth != null;
    }

    function role(uid) {
      return get(/databases/$(database)/documents/users/$(uid)).data.role;
    }

    function isOwner(uid) {
      return signedIn() && role(uid) == 'owner';
    }

    function isPrivilegedUser(uid) {
      return signedIn() &&
        (role(uid) == 'admin' || role(uid) == 'owner' || role(uid) == 'manager' || role(uid) == 'TLO');
    }
    
    function userDepartment(uid) {
      return get(/databases/$(database)/documents/users/$(uid)).data.department;
    }

    // ---- USERS ----
    match /users/{userId} {
      allow create: if signedIn() && request.auth.uid == userId;

      allow read: if isOwner(request.auth.uid) || request.auth.uid == userId || 
                      (isPrivilegedUser(request.auth.uid) && userDepartment(request.auth.uid) == resource.data.department);

      allow update: if signedIn() &&
        (request.auth.uid == userId || isPrivilegedUser(request.auth.uid));

      allow delete: if isOwner(request.auth.uid);

      allow list: if signedIn(); // Relies on client-side queries and secure read rules

      match /pushSubscriptions/{docId} {
        allow read, write, delete: if request.auth != null && request.auth.uid == userId;
      }
    }

    // ---- SHIFTS ----
    match /shifts/{shiftId} {
      allow read: if isOwner(request.auth.uid) || request.auth.uid == resource.data.userId || (isPrivilegedUser(request.auth.uid) && userDepartment(request.auth.uid) == resource.data.department);
      
      allow create: if isPrivilegedUser(request.auth.uid);
      allow delete: if false; // Deletes must go through the backend function

      allow update: if signedIn() &&
        (
          (resource.data.userId == request.auth.uid && request.resource.data.userId == request.auth.uid)
          || isPrivilegedUser(request.auth.uid)
        );
        
      match /materialPurchases/{purchaseId} {
        allow read, list: if isOwner(request.auth.uid) || (signedIn() && userDepartment(request.auth.uid) == get(/databases/$(database)/documents/shifts/$(shiftId)).data.department);
        allow create: if isPrivilegedUser(request.auth.uid) || request.auth.uid == get(/databases/$(database)/documents/shifts/$(shiftId)).data.userId;
        allow delete: if isPrivilegedUser(request.auth.uid) || request.auth.uid == resource.data.userId;
      }
    }

    // ---- PROJECTS ----
    match /projects/{projectId} {
      allow read: if isOwner(request.auth.uid) || (signedIn() && userDepartment(request.auth.uid) == resource.data.department);
      allow create, update, delete: if isPrivilegedUser(request.auth.uid);

      match /files/{fileId} {
        allow read, create: if signedIn();
        allow delete: if isPrivilegedUser(request.auth.uid) || resource.data.uploaderId == request.auth.uid;
      }
    }
    
    // ---- ANNOUNCEMENTS ----
    match /announcements/{id} {
      allow read: if isOwner(request.auth.uid) || (signedIn() && (resource.data.department == null || resource.data.department == userDepartment(request.auth.uid)));
      allow create, update, delete: if isPrivilegedUser(request.auth.uid);
    }

    // ---- ANNOUNCEMENT ACKNOWLEDGEMENTS ----
    match /announcementAcknowledgements/{docId} {
      allow read: if signedIn();
      allow create, update, delete: if signedIn()
        && request.resource.data.userId == request.auth.uid;
    }

    // ---- SETTINGS ----
    match /settings/{id} {
      allow read, write: if isOwner(request.auth.uid);
    }

    // ---- TRADE TASKS ----
    match /trade_tasks/{id} {
      allow read: if isOwner(request.auth.uid) || (signedIn() && (resource.data.department == null || resource.data.department == userDepartment(request.auth.uid)));
      allow write: if isOwner(request.auth.uid) || (
          isPrivilegedUser(request.auth.uid) &&
          (resource == null || resource.data.department == userDepartment(request.auth.uid) || resource.data.department == null) &&
          (request.resource == null || request.resource.data.department == userDepartment(request.auth.uid) || request.resource.data.department == null)
      );
    }

    // ---- UNAVAILABILITY ----
    match /unavailability/{id} {
      allow read: if isOwner(request.auth.uid) || (signedIn() && userDepartment(request.auth.uid) == userDepartment(resource.data.userId));
      allow write: if isPrivilegedUser(request.auth.uid);
    }

    // ---- HEALTH & SAFETY FILES ----
    match /health_and_safety_files/{id} {
      allow read: if signedIn();
      allow create, update, delete: if isPrivilegedUser(request.auth.uid);
    }
    
    // ---- EVIDENCE CHECKLISTS ----
    match /evidence_checklists/{contractName} {
        allow read: if signedIn();
        allow write: if isPrivilegedUser(request.auth.uid);
    }

    // ---- COLLECTION GROUP QUERIES ----
     match /{path=**}/materialPurchases/{purchaseId} {
        allow read: if isOwner(request.auth.uid) || (signedIn() && userDepartment(request.auth.uid) == resource.data.department);
    }
  }
}
